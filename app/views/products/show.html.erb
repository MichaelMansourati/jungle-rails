<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

  <h2>Reviews</h2>
  <% if @product.reviews.length > 0 %>
  <h4> Average Rating: <%= number_with_precision(@product.reviews.average(:rating), precision: 2) %></h4>
  <% @product.reviews.each do |review| %>
    <p>
      <strong>rating: </strong><%= review.rating %>
      </br>
      <strong>review: </strong><%= review.description %>
    </p>
  <% end %>
  <% else %>
  <h4>Be the first to leave a review!</h4>
  <br/>
  <% end %>

  <% if current_user %>
    <h2>Leave a Review:</h2>
      <%= form_for([@product, @product.reviews.build]) do |f| %>
        <p>
          <%= f.label :rating %><br>
          <%= f.select :rating, options_for_select([1, 2, 3, 4, 5]) %>
        </p>
        <p>
          <%= f.label :review %><br>
          <%= f.text_area :description %>
        </p>
        <p>
          <%= f.submit %>
        </p>
        </br>
      <% end %>
  <% else %>
    <h4><u>You must be signed in to leave a review.</u></h4>
  <% end %>

</section>
